pipeline {
    agent {
      docker{
        image 'node:6-alpine'
        args '-p 3000:3000'
      }
    }
    environment {
        registry = "orantoine/fortnite-front"
        HOME = '.'
    }
    stages {
               stage ('Build') {
            steps {
                sh 'npm install'
            }
        }
        stage('Post'){
            steps{
                script {
                        dockerImage = docker.build registry + ":"+VERSION
                }
            }
        }
    }
}
